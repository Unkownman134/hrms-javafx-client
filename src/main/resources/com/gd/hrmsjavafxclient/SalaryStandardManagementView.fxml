<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gd.hrmsjavafxclient.controller.SalaryStandardManagementController"
            prefHeight="700.0" prefWidth="1000.0">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Label text="R8: 薪酬标准配置" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="刷新列表" onAction="#handleRefresh" style="-fx-base: #5bc0de;"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="standardTable">
            <BorderPane.margin>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </BorderPane.margin>
            <columns>
                <TableColumn fx:id="standardIdCol" text="ID" prefWidth="50.0"/>
                <TableColumn fx:id="standardNameCol" text="标准名称" prefWidth="180.0"/>
                <TableColumn fx:id="baseSalaryCol" text="基本工资" prefWidth="120.0"/>
                <TableColumn fx:id="allowanceCol" text="餐补" prefWidth="100.0"/>
                <TableColumn fx:id="bonusCol" text="其他补贴" prefWidth="100.0"/>
                <TableColumn fx:id="totalAmountCol" text="总金额" prefWidth="120.0"/>
                <TableColumn fx:id="actionCol" text="操作" prefWidth="150.0"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

    <right>
        <VBox spacing="15" prefWidth="280.0" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-color: #cccccc; -fx-border-width: 1 0 0 1;">
            <Label fx:id="formTitle" text="新增薪酬标准" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <Label text="标准 ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="standardIdField" editable="false" promptText="自动生成" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="名称:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="standardNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="基本工资:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="baseSalaryField" promptText="输入基本工资" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="餐补:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="allowanceField" promptText="输入餐补/津贴" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="其他补贴:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="bonusField" promptText="输入其他补贴" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="总金额:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <Label fx:id="totalAmountLabel" text="0.00" style="-fx-font-size: 16px; -fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
            </GridPane>

            <HBox alignment="CENTER" spacing="10" VBox.vgrow="ALWAYS">
                <Button fx:id="saveButton" text="保存" onAction="#handleSave" prefWidth="100.0" style="-fx-base: #4caf50; -fx-text-fill: white;"/>
                <Button fx:id="cancelButton" text="取消/清空" onAction="#handleCancel" prefWidth="100.0"/>
            </HBox>
        </VBox>
    </right>
</BorderPane>