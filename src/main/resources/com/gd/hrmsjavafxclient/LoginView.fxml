<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane prefHeight="500.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gd.hrmsjavafxclient.controller.LoginController"
            stylesheets="@hrms-styles.css">

    <children>
        <!-- 中心登录卡片 -->
        <VBox alignment="CENTER" spacing="24"
              AnchorPane.topAnchor="0"
              AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0"
              styleClass="login-card">

            <!-- Logo 区域（可加图片或图标）-->
            <ImageView fitWidth="64" fitHeight="64" pickOnBounds="true">
                <image>
                    <Image url="@icon.jpg" />
                </image>
            </ImageView>

            <!-- 标题 -->
            <Label text="人事管理系统登录" styleClass="content-header"/>

            <!-- 用户名输入 -->
            <VBox spacing="6" maxWidth="300">
                <children>
                    <Label text="用户名：" styleClass="icon-label"/>
                    <TextField fx:id="usernameField"
                               promptText="请输入用户名"
                               styleClass="text-field"/>
                </children>
            </VBox>

            <!-- 密码输入 -->
            <VBox spacing="6" maxWidth="300">
                <children>
                    <Label text="密码：" styleClass="icon-label"/>
                    <PasswordField fx:id="passwordField"
                                   promptText="请输入密码"
                                   styleClass="text-field"/>
                </children>
            </VBox>

            <!-- 登录按钮 -->
            <Button text="登 录"
                    onAction="#handleLogin"
                    styleClass="action-button"/>

            <!-- 可选：忘记密码链接 -->
            <Hyperlink text="忘记密码？" style="-fx-text-fill: #52a6ff; -fx-font-size: 13px;" />

        </VBox>
    </children>
</AnchorPane>