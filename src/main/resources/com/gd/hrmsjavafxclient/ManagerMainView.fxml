        <Separator />
        <VBox spacing="10.0" alignment="CENTER_LEFT">
            <Label text="当前用户信息：" style="-fx-font-weight: bold;" />
            <Text fx:id="userInfoText" wrappingWidth="700.0" />
        </VBox>
    </children>
</VBox>