<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.hr.EmployeeController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="员工档案管理" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label text="数字化员工全生命周期档案 (HR版)" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="10" alignment="CENTER">
                <Button text="刷新" onAction="#handleRefresh" styleClass="refresh-button" />
                <Button text="新增员工" onAction="#handleNewEmployee" styleClass="action-button-primary" />
            </HBox>
        </children>
    </HBox>

    <HBox style="-fx-background-color: #EBF5FB; -fx-padding: 10; -fx-background-radius: 5;">
        <Label text="提示：所有员工数据均通过 API 实时同步，删除操作不可恢复。" style="-fx-text-fill: #2980B9; -fx-font-size: 13px;"/>
    </HBox>

    <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS" fixedCellSize="40">
        <columns>
            <TableColumn fx:id="empIdCol" text="ID" prefWidth="50"/>
            <TableColumn fx:id="empNameCol" text="姓名" prefWidth="80"/>
            <TableColumn fx:id="genderCol" text="性别" prefWidth="50"/>
            <TableColumn fx:id="phoneCol" text="联系电话" prefWidth="120"/>
            <TableColumn fx:id="emailCol" text="电子邮箱" prefWidth="180"/>
            <TableColumn fx:id="statusCol" text="状态" prefWidth="80"/>
            <TableColumn fx:id="joinDateCol" text="入职日期" prefWidth="120"/>
            <TableColumn fx:id="actionCol" text="操作" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>