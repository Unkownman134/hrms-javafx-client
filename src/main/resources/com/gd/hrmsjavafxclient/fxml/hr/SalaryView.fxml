<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.hr.SalaryController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="薪资水平管理" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label text="定义企业标准化薪资等级与各项补助" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="刷新" onAction="#handleRefresh" styleClass="refresh-button" />
            <Button text="新增薪资标准" onAction="#handleNewSalary" styleClass="action-button-primary" />
        </children>
    </HBox>

    <TableView fx:id="salaryTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="stdIdCol" text="标准ID" prefWidth="80"/>
            <TableColumn fx:id="nameCol" text="标准名称" prefWidth="150"/>
            <TableColumn fx:id="basicCol" text="基本工资" prefWidth="120"/>
            <TableColumn fx:id="mealCol" text="餐补" prefWidth="100"/>
            <TableColumn fx:id="allowanceCol" text="其他补贴" prefWidth="100"/>
            <TableColumn fx:id="totalCol" text="总计" prefWidth="120"/>
            <TableColumn fx:id="actionCol" text="操作" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>