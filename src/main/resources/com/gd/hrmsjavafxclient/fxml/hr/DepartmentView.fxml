<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.hr.DepartmentController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="部门架构管理" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label text="维护企业部门层级信息" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="刷新数据" onAction="#handleRefresh" styleClass="refresh-button" />
            <Button text="新增部门" onAction="#handleNewDepartment" styleClass="action-button-primary" />
        </children>
    </HBox>

    <TableView fx:id="departmentTable" VBox.vgrow="ALWAYS" fixedCellSize="40">
        <columns>
            <TableColumn fx:id="deptIdCol" text="部门ID" prefWidth="100"/>
            <TableColumn fx:id="deptNameCol" text="部门名称" prefWidth="150"/>
            <TableColumn fx:id="deptDescCol" text="部门描述" prefWidth="300"/>
            <TableColumn fx:id="actionCol" text="操作" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>