<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="750.0" prefWidth="1100.0"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gd.hrmsjavafxclient.controller.hr.HRMainController"
            stylesheets="@../../style/hrms-styles.css" styleClass="root">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-toolbar">
            <padding>
                <Insets left="30" right="30" top="15" bottom="15"/>
            </padding>
            <children>
                <Label text="HRMS" style="-fx-font-size: 24px; -fx-font-weight: 900; -fx-text-fill: -fx-primary-color;"/>
                <Separator orientation="VERTICAL" prefHeight="20" style="-fx-opacity: 0.5;"/>
                <Label text="Human Resources" style="-fx-text-fill: -fx-text-main; -fx-font-weight: bold; -fx-letter-spacing: 1px;"/>
                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER" spacing="15">
                    <Label fx:id="userInfoLabel" style="-fx-text-fill: -fx-text-muted;"/>
                    <Button text="退出登录" onAction="#handleLogout"
                            style="-fx-background-color: transparent; -fx-text-fill: #E74C3C; -fx-border-color: #E74C3C; -fx-border-radius: 4; -fx-padding: 5 15; -fx-cursor: hand;"/>
                </HBox>
            </children>
        </HBox>
    </top>

    <left>
        <VBox fx:id="sideBar" prefWidth="250.0" styleClass="side-bar">
            <padding>
                <Insets top="30" left="0" right="0"/>
            </padding>
            <children>
                <Label text="工作台" style="-fx-text-fill: #5D6D7E; -fx-padding: 0 0 15 25; -fx-font-size: 11px; -fx-font-weight: bold;"/>
                <Button fx:id="dashboardButton" text="数据概览" onAction="#showDashboardView" styleClass="nav-button" maxWidth="Infinity"/>

                <Region prefHeight="25"/>
                <Label text="基础档案管理" style="-fx-text-fill: #5D6D7E; -fx-padding: 0 0 15 25; -fx-font-size: 11px; -fx-font-weight: bold;"/>
                <Button fx:id="employeeButton" text="员工管理" onAction="#showEmployeeView" styleClass="nav-button" maxWidth="Infinity"/>
                <Button fx:id="departmentButton" text="部门查看" onAction="#showDepartmentView" styleClass="nav-button" maxWidth="Infinity"/>
                <Button fx:id="positionButton" text="职位体系" onAction="#showPositionView" styleClass="nav-button" maxWidth="Infinity"/>

                <Region prefHeight="25"/>
                <Label text="人力资源流程" style="-fx-text-fill: #5D6D7E; -fx-padding: 0 0 15 25; -fx-font-size: 11px; -fx-font-weight: bold;"/>
                <Button fx:id="recruitmentButton" text="招聘管理" onAction="#showRecruitmentView" styleClass="nav-button" maxWidth="Infinity"/>
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>
        </StackPane>
    </center>
</BorderPane>