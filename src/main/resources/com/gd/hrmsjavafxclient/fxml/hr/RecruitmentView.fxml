<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.hr.RecruitmentController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="招聘人才库" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label text="管理待入职及面试中的候选人信息" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="10" alignment="CENTER">
                <Button text="新增候选人" onAction="#handleAddCandidate" styleClass="action-button-primary" />
                <Button text="结果录入" onAction="#handleUpdateResult" styleClass="action-button-secondary" />
                <Button text="刷新" onAction="#handleRefresh" styleClass="refresh-button" />
            </HBox>
        </children>
    </HBox>

    <TableView fx:id="candidateTable" VBox.vgrow="ALWAYS" fixedCellSize="40">
        <columns>
            <TableColumn fx:id="candIDColumn" text="ID" prefWidth="60"/>
            <TableColumn fx:id="nameColumn" text="姓名" prefWidth="100"/>
            <TableColumn fx:id="genderColumn" text="性别" prefWidth="60"/>
            <TableColumn fx:id="positionColumn" text="申请职位" prefWidth="150"/>
            <TableColumn fx:id="interviewDateColumn" text="面试日期" prefWidth="120"/>
            <TableColumn fx:id="phoneColumn" text="联系电话" prefWidth="120"/>
            <TableColumn fx:id="emailColumn" text="电子邮箱" prefWidth="150"/>
            <TableColumn fx:id="resultColumn" text="面试结果" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>