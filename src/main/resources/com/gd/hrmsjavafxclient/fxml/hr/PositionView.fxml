<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.hr.PositionController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="职位体系管理" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label text="管理公司标准职位与职级" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="刷新" onAction="#handleRefresh" styleClass="refresh-button" />
            <Button text="新增职位" onAction="#handleNewPosition" styleClass="action-button-primary" />
        </children>
    </HBox>

    <TableView fx:id="positionTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="posIdCol" text="职位ID" prefWidth="100"/>
            <TableColumn fx:id="posNameCol" text="职位名称" prefWidth="150"/>
            <TableColumn fx:id="levelCol" text="职级" prefWidth="100"/>
            <TableColumn fx:id="salaryLevelCol" text="薪资等级" prefWidth="100"/>
            <TableColumn fx:id="actionCol" text="操作" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>