<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.hr.PositionController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="职位体系管理" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label text="定义公司岗位层级与关联薪酬标准" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="10">
                <Button text="刷新" onAction="#handleRefresh" styleClass="refresh-button" />
                <Button text="新增职位" onAction="#handleNewPosition" styleClass="action-button-primary" />
            </HBox>
        </children>
    </HBox>

    <TableView fx:id="positionTable" VBox.vgrow="ALWAYS" fixedCellSize="45">
        <columns>
            <TableColumn fx:id="posNameCol" text="职位名称" prefWidth="250"/>
            <TableColumn fx:id="levelCol" text="职级代码 (Level)" prefWidth="150"/>

            <TableColumn fx:id="salaryStandardNameCol" text="关联薪酬标准" prefWidth="250"/>

            <TableColumn fx:id="actionCol" text="管理操作" prefWidth="200"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>