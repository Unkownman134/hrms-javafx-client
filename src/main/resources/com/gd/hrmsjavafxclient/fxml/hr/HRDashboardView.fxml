<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.hr.HRDashboardController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <VBox alignment="CENTER" spacing="20.0" styleClass="login-card" maxWidth="Infinity" VBox.vgrow="ALWAYS">
        <children>
            <Label fx:id="dashboardTitle" text="HR 工作控制台" styleClass="welcome-label" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
            <Label fx:id="welcomeLabel" style="-fx-text-fill: -fx-text-main; -fx-font-size: 18px;" text="欢迎回来使用人事管理系统！"/>

            <Label fx:id="roleLabel" style="-fx-text-fill: -fx-text-main; -fx-font-size: 16px;" />
            <Label fx:id="empIdLabel" style="-fx-text-fill: -fx-text-main; -fx-font-size: 16px;" />

            <Label fx:id="dateTimeLabel" style="-fx-text-fill: -fx-text-muted;"/>
        </children>
    </VBox>
</VBox>