<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gd.hrmsjavafxclient.controller.admin.AdminMainController"
            stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <top>
        <VBox styleClass="top-toolbar">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label text="HRMS | 超级管理员控制台" styleClass="top-title"/>
                <Label fx:id="userInfoLabel" styleClass="label"/>
            </HBox>
        </VBox>
    </top>

    <left>
        <VBox fx:id="sideBar" prefWidth="220.0" styleClass="side-bar">
            <Button text="仪表盘" styleClass="nav-button" onAction="#showDashboardView"/>
            <Separator styleClass="nav-separator"/>

            <Label text="数据管理" styleClass="nav-group-label"/>
            <Button text="用户账号管理" styleClass="nav-button" onAction="#showUserView"/>
            <Button text="员工档案管理" styleClass="nav-button" onAction="#showEmployeeView"/>
            <Button text="职位信息管理" styleClass="nav-button" onAction="#showPositionView"/>
            <Button text="部门信息管理" styleClass="nav-button" onAction="#showDepartmentView"/>

            <Separator styleClass="nav-separator"/>

            <Label text="系统配置" styleClass="nav-group-label"/>
            <Button text="薪酬标准配置" styleClass="nav-button" onAction="#showSalaryView"/>

            <Region VBox.vgrow="ALWAYS" />
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane">
        </StackPane>
    </center>
</BorderPane>