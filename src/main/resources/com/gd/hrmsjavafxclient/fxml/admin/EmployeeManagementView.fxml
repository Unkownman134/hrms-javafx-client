<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.admin.EmployeeManagementController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="员工档案管理" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label text="数字化员工全生命周期档案" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="刷新" onAction="#loadEmployeeData" styleClass="refresh-button"/>
            <Button text="入职新员工" onAction="#handleNewEmployee" styleClass="action-button"/>
        </children>
    </HBox>

    <TableView fx:id="employeeTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="empIdCol" text="ID" prefWidth="50"/>
            <TableColumn fx:id="empNameCol" text="姓名" prefWidth="80"/>
            <TableColumn fx:id="genderCol" text="性别" prefWidth="50"/>
            <TableColumn fx:id="phoneCol" text="电话" prefWidth="110"/>
            <TableColumn fx:id="emailCol" text="电子邮箱" prefWidth="150"/>
            <TableColumn fx:id="deptIdCol" text="部门ID" prefWidth="60"/>
            <TableColumn fx:id="posIdCol" text="职位ID" prefWidth="60"/>
            <TableColumn fx:id="managerIdCol" text="上级ID" prefWidth="60"/>
            <TableColumn fx:id="statusCol" text="状态" prefWidth="70"/>
            <TableColumn fx:id="actionCol" text="操作" prefWidth="140"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>