<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.admin.PositionManagementController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="岗位职位管理" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label text="配置岗位信息与职级说明" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="刷新" onAction="#loadPositionData" styleClass="refresh-button"/>
            <Button text="新增职位" onAction="#handleNewPosition" styleClass="action-button" />
        </children>
    </HBox>

    <TableView fx:id="positionTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="posIdCol" prefWidth="80.0" text="ID" />
            <TableColumn fx:id="posNameCol" prefWidth="150.0" text="岗位名称" />
            <TableColumn fx:id="posLevelCol" prefWidth="120.0" text="职级等级" />
            <TableColumn fx:id="baseSalaryLevelCol" prefWidth="120.0" text="薪酬标准ID" />
            <TableColumn fx:id="actionCol" prefWidth="200.0" text="操作" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>