<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.admin.DepartmentManagementController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="组织架构管理" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label text="定义企业部门层级与结构" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="刷新" onAction="#loadDepartmentData" styleClass="refresh-button"/>
            <Button text="新增部门" onAction="#handleNewDepartment" styleClass="action-button" />
        </children>
    </HBox>

    <TableView fx:id="departmentTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="deptIdCol" prefWidth="80.0" text="部门ID" />
            <TableColumn fx:id="deptNameCol" prefWidth="200.0" text="部门名称" />
            <TableColumn fx:id="deptDescCol" prefWidth="300.0" text="部门描述" />
            <TableColumn fx:id="actionCol" prefWidth="150.0" text="操作" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>