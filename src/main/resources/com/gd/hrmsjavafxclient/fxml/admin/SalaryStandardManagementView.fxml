<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.admin.SalaryStandardManagementController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="薪酬标准配置" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label text="制定基础薪资与津贴福利标准" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="刷新" onAction="#loadStandardData" styleClass="refresh-button"/>
            <Button text="制定新标准" onAction="#handleNewStandard" styleClass="action-button" />
        </children>
    </HBox>

    <TableView fx:id="standardTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="standardIdCol" prefWidth="60.0" text="ID" />
            <TableColumn fx:id="standardNameCol" prefWidth="180.0" text="标准名称" />
            <TableColumn fx:id="baseSalaryCol" prefWidth="100.0" text="基本工资" />
            <TableColumn fx:id="bonusCol" prefWidth="100.0" text="绩效奖金" />
            <TableColumn fx:id="allowanceCol" prefWidth="120.0" text="各项补贴" />
            <TableColumn fx:id="totalAmountCol" prefWidth="120.0" text="总额估算" />
            <TableColumn fx:id="actionCol" prefWidth="150.0" text="操作" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>