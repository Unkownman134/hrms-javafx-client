<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.admin.ApprovalConfigController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="审批流程配置" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label text="按部门配置不同业务的审批路径" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="刷新" onAction="#loadConfigData" styleClass="refresh-button"/>
            <Button text="新增配置" onAction="#handleNewConfig" styleClass="action-button" />
        </children>
    </HBox>

    <TableView fx:id="configTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idCol" prefWidth="80.0" text="配置ID" />
            <TableColumn fx:id="typeCol" prefWidth="120.0" text="流程类型" />
            <TableColumn fx:id="deptCol" prefWidth="150.0" text="适用部门" />
            <TableColumn fx:id="posCol" prefWidth="150.0" text="审批职位" />
            <TableColumn fx:id="actionCol" prefWidth="160.0" text="操作" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>