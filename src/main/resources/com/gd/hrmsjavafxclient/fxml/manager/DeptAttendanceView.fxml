<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.manager.DeptAttendanceController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="部门考勤记录" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label fx:id="deptNameLabel" text="查看全员考勤明细" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />

            <Label text="选择查询月份:"/>
            <DatePicker fx:id="monthDatePicker" prefWidth="180.0" promptText="点击选择月份"/>

            <Button fx:id="queryButton" text="查 询" onAction="#handleQueryAttendance" styleClass="action-button"/>
        </children>
    </HBox>

    <TableView fx:id="attendanceTable" VBox.vgrow="ALWAYS" styleClass="data-table">
        <columns>
            <TableColumn fx:id="empIdCol" text="员工ID" prefWidth="80.0"/>
            <TableColumn fx:id="nameCol" text="员工姓名" prefWidth="120.0"/>
            <TableColumn fx:id="dateCol" text="日期" prefWidth="120.0"/>
            <TableColumn fx:id="checkInTimeCol" text="上班打卡" prefWidth="100.0"/>
            <TableColumn fx:id="checkOutTimeCol" text="下班打卡" prefWidth="100.0"/>
            <TableColumn fx:id="statusCol" text="状态" prefWidth="100.0"/>
            <TableColumn fx:id="noteCol" text="备注" prefWidth="200.0"/>
        </columns>
    </TableView>
</VBox>