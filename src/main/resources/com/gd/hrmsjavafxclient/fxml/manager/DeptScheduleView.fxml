<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.manager.DeptScheduleController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="部门排班管理" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label fx:id="deptNameLabel" text="当前部门: 加载中..." style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />

            <Label text="查询区间:"/>
            <DatePicker fx:id="queryStartDatePicker" prefWidth="140.0" promptText="开始日期"/>
            <Label text="至"/>
            <DatePicker fx:id="queryEndDatePicker" prefWidth="140.0" promptText="结束日期"/>

            <Button text="查询/刷新" onAction="#handleRefresh" styleClass="refresh-button" />
        </children>
    </HBox>

    <TitledPane text="新增批量排班任务" expanded="true" styleClass="sub-panel">
        <HBox spacing="15" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <VBox spacing="5">
                <Label text="选择员工"/>
                <ComboBox fx:id="employeeComboBox" promptText="选择员工" prefWidth="150"/>
            </VBox>
            <VBox spacing="5">
                <Label text="开始日期"/>
                <DatePicker fx:id="startDatePicker" prefWidth="150"/>
            </VBox>
            <VBox spacing="5">
                <Label text="结束日期"/>
                <DatePicker fx:id="endDatePicker" prefWidth="150"/>
            </VBox>
            <VBox spacing="5">
                <Label text="选择班次"/>
                <ComboBox fx:id="shiftRuleComboBox" promptText="班次规则" prefWidth="150"/>
            </VBox>
            <Button text="确认批量排班" onAction="#handleBatchAdd"
                    style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold;"
                    prefHeight="45"/>
        </HBox>
    </TitledPane>

    <TableView fx:id="scheduleTable" VBox.vgrow="ALWAYS" styleClass="data-table">
        <columns>
            <TableColumn fx:id="employeeNameCol" text="员工姓名" prefWidth="150.0"/>
            <TableColumn fx:id="dateCol" text="排班日期" prefWidth="150.0"/>
            <TableColumn fx:id="shiftNameCol" text="班次名称" prefWidth="150.0"/>
            <TableColumn fx:id="statusCol" text="状态" prefWidth="100.0"/>
        </columns>
    </TableView>
</VBox>