<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.manager.ManagerDashboardController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <VBox alignment="CENTER" spacing="20.0" styleClass="login-card" maxWidth="Infinity" VBox.vgrow="ALWAYS">
        <children>
            <Label fx:id="welcomeLabel" text="欢迎回来" styleClass="welcome-label" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER">
                <Label text="所属部门：" style="-fx-text-fill: -fx-text-muted; -fx-font-size: 16px;"/>
                <Label fx:id="roleLabel" text="[部门名称]" style="-fx-text-fill: #2ECC71; -fx-font-weight: bold; -fx-font-size: 16px;"/>
            </HBox>
            <Label text="请查看您的部门动态！" style="-fx-text-fill: -fx-text-muted;"/>
        </children>
    </VBox>
</VBox>