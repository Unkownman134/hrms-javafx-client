<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.manager.ShiftRuleController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <children>
            <VBox>
                <Label text="班次规则详情 ⏰" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: -fx-text-main;"/>
                <Label text="查看全公司标准上下班规则定义" style="-fx-font-size: 12px; -fx-text-fill: -fx-text-muted;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="重载数据" onAction="#handleRefresh" styleClass="refresh-button" />
        </children>
    </HBox>

    <TableView fx:id="shiftRuleTable" VBox.vgrow="ALWAYS" styleClass="data-table">
        <columns>
            <TableColumn fx:id="ruleIdCol" text="规则ID" prefWidth="100.0"/>
            <TableColumn fx:id="ruleNameCol" text="规则名称" prefWidth="200.0"/>
            <TableColumn fx:id="startTimeCol" text="上班时间" prefWidth="150.0"/>
            <TableColumn fx:id="endTimeCol" text="下班时间" prefWidth="150.0"/>
            <TableColumn fx:id="toleranceCol" text="迟到容忍(分钟)" prefWidth="150.0"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>