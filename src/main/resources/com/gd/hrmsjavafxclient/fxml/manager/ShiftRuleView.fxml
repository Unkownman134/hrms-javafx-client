<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="650.0" prefWidth="950.0" spacing="15.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.manager.ShiftRuleController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="班次规则详情 ⏰" styleClass="view-title"/>
    <Separator/>

    <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="query-bar">
        <Label text="这里展示了所有员工的排班规则定义，只读。"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>

    <TableView fx:id="shiftRuleTable" VBox.vgrow="ALWAYS" styleClass="data-table">
        <columns>
            <TableColumn fx:id="ruleIdCol" text="规则ID" prefWidth="80.0"/>
            <TableColumn fx:id="ruleNameCol" text="规则名称" prefWidth="150.0"/>
            <TableColumn fx:id="startTimeCol" text="标准上班时间" prefWidth="120.0"/>
            <TableColumn fx:id="endTimeCol" text="标准下班时间" prefWidth="120.0"/>
            <TableColumn fx:id="toleranceCol" text="迟到容忍分钟数" prefWidth="150.0"/>
            <TableColumn text="备注" prefWidth="250.0"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>