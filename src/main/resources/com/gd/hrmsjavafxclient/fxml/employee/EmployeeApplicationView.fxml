<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.employee.EmployeeApplicationController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <VBox>
            <Label text="我的申请中心" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Label text="在这里管理您的请假、报销和出差申请" style="-fx-font-size: 12px; -fx-text-fill: #7F8C8D;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>

        <Button text="↩ 撤销申请" onAction="#handleWithdrawApplication"
                style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>

        <Button text="＋ 新增申请" onAction="#handleAddNewApplication"
                style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
        <Button text="刷新列表" onAction="#loadApplicationData" styleClass="action-button-primary"/>
    </HBox>

    <TableView fx:id="applicationTable" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columns>
            <TableColumn fx:id="idCol" text="单号" prefWidth="60"/>
            <TableColumn fx:id="typeCol" text="类型" prefWidth="80"/>
            <TableColumn fx:id="startCol" text="开始日期" prefWidth="110"/>
            <TableColumn fx:id="endCol" text="结束日期" prefWidth="110"/>
            <TableColumn fx:id="reasonCol" text="申请事由" prefWidth="250"/>
            <TableColumn fx:id="statusCol" text="当前状态" prefWidth="100"/>
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
    </TableView>
</VBox>