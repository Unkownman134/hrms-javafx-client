<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.employee.EmployeeScheduleController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <VBox>
            <Label text="我的排班日历" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
            <Label text="查看每月排班安排与时间详情" style="-fx-font-size: 13px; -fx-text-fill: #95A5A6;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>

        <HBox alignment="CENTER" spacing="12">
            <Button text="今天" onAction="#handleToday"
                    style="-fx-cursor: hand; -fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 5 15; -fx-font-weight: bold;"/>

            <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #F8F9F9; -fx-padding: 5 10; -fx-background-radius: 8; -fx-border-color: #EAECEE; -fx-border-radius: 8;">
                <Button text="&lt;" onAction="#handlePrevMonth" styleClass="action-button-secondary" style="-fx-cursor: hand;"/>
                <Label fx:id="monthLabel" text="2025年12月"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-min-width: 120; -fx-alignment: center; -fx-text-fill: #2E4053;"/>
                <Button text="&gt;" onAction="#handleNextMonth" styleClass="action-button-secondary" style="-fx-cursor: hand;"/>
            </HBox>
        </HBox>
    </HBox>

    <GridPane fx:id="weekdayHeader" hgap="10" style="-fx-background-color: #F2F4F4; -fx-padding: 10; -fx-background-radius: 5;">
        <columnConstraints>
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
            <ColumnConstraints percentWidth="14.28" />
        </columnConstraints>
        <children>
            <Label text="周一" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #7F8C8D;" maxWidth="Infinity" alignment="CENTER"/>
            <Label text="周二" GridPane.columnIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #7F8C8D;" maxWidth="Infinity" alignment="CENTER"/>
            <Label text="周三" GridPane.columnIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #7F8C8D;" maxWidth="Infinity" alignment="CENTER"/>
            <Label text="周四" GridPane.columnIndex="3" style="-fx-font-weight: bold; -fx-text-fill: #7F8C8D;" maxWidth="Infinity" alignment="CENTER"/>
            <Label text="周五" GridPane.columnIndex="4" style="-fx-font-weight: bold; -fx-text-fill: #7F8C8D;" maxWidth="Infinity" alignment="CENTER"/>
            <Label text="周六" GridPane.columnIndex="5" style="-fx-font-weight: bold; -fx-text-fill: #E67E22;" maxWidth="Infinity" alignment="CENTER"/>
            <Label text="周日" GridPane.columnIndex="6" style="-fx-font-weight: bold; -fx-text-fill: #E74C3C;" maxWidth="Infinity" alignment="CENTER"/>
        </children>
    </GridPane>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">
        <GridPane fx:id="calendarGrid" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
                <ColumnConstraints percentWidth="14.28" />
            </columnConstraints>
        </GridPane>
    </ScrollPane>
</VBox>