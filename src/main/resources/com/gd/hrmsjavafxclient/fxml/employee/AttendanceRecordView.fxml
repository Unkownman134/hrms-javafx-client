<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gd.hrmsjavafxclient.controller.employee.EmployeeAttendanceRecordController"
      stylesheets="@../../style/hrms-styles.css" styleClass="root">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <HBox alignment="CENTER_LEFT" spacing="15">
        <VBox>
            <Label text="考勤详情" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Label text="PC端仅供查询，请通过移动端打卡" style="-fx-font-size: 12px; -fx-text-fill: #E67E22;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="选择月份:"/>
        <ComboBox fx:id="monthComboBox" prefWidth="120"/>
        <Button fx:id="queryButton" text="查询" onAction="#handleQueryButtonAction" styleClass="action-button-primary"/>
        <Button text="导出" onAction="#handleExportButtonAction" styleClass="refresh-button"/>
    </HBox>

    <TableView fx:id="attendanceTable" VBox.vgrow="ALWAYS" styleClass="table-view">
        <columns>
            <TableColumn fx:id="dateCol" text="日期" prefWidth="150"/>
            <TableColumn fx:id="clockInCol" text="签到时间" prefWidth="150"/>
            <TableColumn fx:id="clockOutCol" text="签退时间" prefWidth="150"/>
            <TableColumn fx:id="statusCol" text="状态" prefWidth="120"/>
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
    </TableView>
</VBox>